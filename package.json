{
  "name": "karchunt",
  "description": "karchunt personal website",
  "type": "module",
  "version": "1.1.5",
  "scripts": {
    "docs:dev": "vitepress dev src",
    "docs:build": "env-cmd -f .env.production vitepress build src",
    "docs:preview": "vitepress preview src",
    "prepare": "husky install",
    "cz": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KarChunT/karchunt.com"
  },
  "author": {
    "name": "Tan Kar Chun",
    "email": "karchuntan.1999@gmail.com",
    "url": "https://www.linkedin.com/in/karchuntan"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@types/github-script": "github:actions/github-script",
    "autoprefixer": "^10.4.17",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.35",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "markdown-it": "^14.0.0",
    "vitepress": "^1.0.0-rc.45",
    "vue": "^3.4.19"
  }
}
